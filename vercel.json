{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/config.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*).js",
            "headers": {
                "cache-control": "max-age=31536000,immutable"
            }
        },
        {
            "src": "/(.*).css",
            "headers": {
                "cache-control": "max-age=31536000,immutable"
            }
        },
        {
            "src": "/(.*).(js|css).map",
            "headers": {
                "cache-control": "max-age=31536000,immutable"
            }
        },
        {
            "src": "/.*",
            "dest": "/public/index.html"
        }
    ]
}