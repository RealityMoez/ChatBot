{
    "version": 2,
    "builds": [
        {
            "src": "api/chat.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/chat",
            "dest": "/api/chat.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1",
            "continue": true
        }
    ],
    "functions": {
        "api/chat.js": {
            "maxDuration": 30
        }
    }
}